# API de OpenAI (solo para generación de respuestas)
OPENAI_API_KEY=tu_api_key_aqui
OPENAI_ORG_ID=tu_org_id_aqui
OPENAI_COMPLETION_MODEL=gpt-4o-mini

# Configuración de embeddings con Hugging Face
HUGGINGFACE_EMBEDDING_MODEL=Xenova/all-MiniLM-L6-v2

# Base de datos vectorial Qdrant
QDRANT_URL=http://qdrant:6333
QDRANT_COLLECTION_NAME=document_embeddings
QDRANT_VECTOR_SIZE=384  # Dimensión del modelo de embeddings

# Configuración del servidor
PORT=3000
NODE_ENV=production

# Configuración de procesamiento de texto
CHUNK_SIZE=512          # Tamaño de cada fragmento de texto
CHUNK_OVERLAP=50        # Solapamiento entre fragmentos consecutivos